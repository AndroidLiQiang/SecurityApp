<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recycler_view_item_tv_selector"
    android:clickable="true"
    android:defaultFocusHighlightEnabled="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/button_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageResult"
        android:layout_width="108dp"
        android:layout_height="198dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:textSize="@dimen/content_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time" />

    <ImageView
        android:id="@+id/lock"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="40dp"
        android:src="@mipmap/ic_lock"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageResult"
        app:layout_constraintLeft_toLeftOf="@+id/imageResult"
        app:layout_constraintRight_toRightOf="@+id/imageResult" />
</androidx.constraintlayout.widget.ConstraintLayout>